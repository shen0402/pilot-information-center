
<div class="faq-section">
    <div class="tight-content-wrapper">
      <h4>{{section.settings.sub_heading_text}}</h4>
      <h2>{{section.settings.heading_text}}</h2>
      <div class="faq-wrapper">

        {% for block in section.blocks %}

            <div data-w-id="8c521039-9506-f022-49e0-b9eff88f73b2" class="faq-individual">
                <div style="color:rgb(0,23,63)" class="larger-text bold-text margin-b">{{block.settings.question}}</div>
                <div style="height:0px" class="faq-bottom-wrapper">
                  <p class="p-smaller margin-b">{{block.settings.answer}}</p>
                </div>
                <div class="faq-btn-wrapper"><img
                    src="//cdn.shopify.com/s/files/1/0714/2922/6772/files/chevron-down.svg?v=1674766850"
                    loading="lazy"
                    style="opacity:1"
                    alt="Downward facing dark blue chevron"
                    class="faq-icon-down"><img
                    src="//cdn.shopify.com/s/files/1/0714/2922/6772/files/chevron-down.svg?v=1674766850"
                    loading="lazy"
                    style="opacity:0"
                    alt="Downward facing dark blue chevron"
                    class="faq-icon-up"></div>
              </div>
            
          {% endfor %}

      </div>
    </div>
  </div>


  {% schema %}
  {
    "name": "FAQs" ,
    "settings": [
        {
            "type": "text",
            "id": "sub_heading_text",
            "default": "Have Questions?",
            "label": "Sub Heading Text"
        },
        {
            "type": "text",
            "id": "heading_text",
            "default": "Membership FAQs",
            "label": "Heading Text"
        }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "FAQ",
        "settings": [
          {
            "type": "text",
            "id": "question",
            "label": "Question"
          },
          {
            "label": "Answer",
            "id": "answer",
            "type": "text"
          }
  
        ]
      }
    ]
  }
  {% endschema %}

  <script>
    // Get all the FAQ individual elements
    const faqIndividuals = document.querySelectorAll('.faq-individual');
    
    // Add a click event listener to each FAQ individual element
    faqIndividuals.forEach(faqIndividual => {
      faqIndividual.addEventListener('click', () => {
        // Toggle the active class on the clicked FAQ individual element
        faqIndividual.classList.toggle('active');
    
        // Toggle the visibility of the content
        const faqContent = faqIndividual.querySelector('.faq-bottom-wrapper');
        faqContent.classList.toggle('active');
    
        // Toggle the chevron icon
        const faqIcons = faqIndividual.querySelectorAll('.faq-icon-up, .faq-icon-down');
        faqIcons.forEach(icon => icon.classList.toggle('active'));
      });
    });
    
    
    const faqIcons = document.querySelectorAll('.faq-icon');
    
    faqIcons.forEach(icon => {
      icon.addEventListener('click', () => {
        const answer = icon.nextElementSibling;
        answer.classList.toggle('show');
        icon.classList.toggle('rotate');
      });
    });
    
    </script>
    