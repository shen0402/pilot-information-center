  <div class="job-all-wrapper">
    {% for block in section.blocks %}
      {% assign organization = block.settings.organization | handleize %}
      {% assign location = block.settings.location | handleize %}
      {% assign month = block.settings.month | handleize %}
      <div
        class="job-fair-individ-wrapper"
        data-query-organization="{{ organization }}"
        data-query-location="{{ location }}"
        data-query-month="{{ month }}">
        <div class="job-logo-wrapper"><img
            src="{{ block.settings.logo | img_url: '450x' }}"
            loading="lazy"
            alt="United Airlines logo"
            class="job-logo-img"></div>
        <div class="job-information-wrapper">
          <div class="job-fair-flex-row">
            <div class="job-fair-flex-col title">
              <div class="larger-text job-fair">{{ block.settings.event_name }}</div>
            </div>
            <div class="job-fair-flex-col main">
              <div>Date:
                <span class="light-text">{{ block.settings.date }}</span>
              </div>
              <br>
              <div>Location:
                <span class="light-text">{{ block.settings.location }}</span>
              </div>
              <br>
              <a href="{{ block.settings.link }}" class="submit-button w-button">GET TICKETS</a>
            </div>
            <div class="job-fair-flex-col">
              <div class="second-info-job-wrapper">
                <div>Organization:
                  <span class="light-text">{{ block.settings.organization }}</span>
                </div>
              </div>
              <div class="second-info-job-wrapper"></div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
