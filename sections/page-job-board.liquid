              <a
                href="javascript:;"
                class="dropdown-filter-link w-dropdown-link job-filter-link"
                data-query="{{ 'Low Cost Cargo' | handleize }}">Low Cost Cargo</a>
            </nav>
          </div>
        </div>
        <div class="job-all-wrapper">
          {% for block in section.blocks %}
            {% if block.type == 'airline_job' %}
              <div class="job-individ-wrapper" data-job-type="{{ block.settings.type | handleize }}">
                <div class="job-logo-wrapper"><img
                    src="{{ block.settings.logo | img_url: '450x' }}"
                    loading="lazy"
                    alt="United Airlines logo"
                    class="job-logo-img"></div>
                <div class="job-information-wrapper">
                  <div class="job-information-flex-row">
                    <div class="job-information-flex-col col-8">
                      <div>Job Type:
                        <span class="light-text">{{ block.settings.type }}</span>
                      </div>
                      <div class="second-info-job-wrapper">
                        {{ block.settings.description }}
                      </div>
                    </div>
                    <div class="job-information-flex-col col-4">
                      <a href="{{ block.settings.link }}" class="submit-button w-button">VIEW JOBS</a>
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}

          {% endfor %}
