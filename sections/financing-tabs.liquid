                          {{ block.settings.additional_criteria }}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          {% endfor %}
        </div>
      </div>
      <div data-w-tab="Tab 3" class="tab-pane-financing w-tab-pane">
